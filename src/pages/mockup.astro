---
// Preview page for the redesigned SpriteViewer mockup
import '../styles/global.css';
---

<html lang="en">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>SpriteViewer Mockup - SGXP</title>
  </head>
  <body data-theme="style_v7">
    <div id="mockup-root">
      <!-- Svelte component will mount here -->
    </div>

    <script>
      import SpriteViewerMockup from '../components/SpriteViewerMockup.svelte';
      import { mount } from 'svelte';

      mount(SpriteViewerMockup, {
        target: document.getElementById('mockup-root')
      });
    </script>
  </body>
</html>
