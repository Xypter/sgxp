---
import FrontPageLayout from "../layouts/FrontPageLayout.astro";
import UploadGuideContent from "../components/UploadGuideContent.svelte";
---

<FrontPageLayout title="Upload Guide">
  <div class="guidelines-container">
    <UploadGuideContent client:only="svelte" />
  </div>
</FrontPageLayout>

<style>
  .guidelines-container {
    max-width: 900px;
    margin: 0 auto;
    padding: 2rem 1rem;
  }

  @media (max-width: 768px) {
    .guidelines-container {
      padding: 1rem 0.5rem;
    }
  }
</style>
