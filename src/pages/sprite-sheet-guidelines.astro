---
import FrontPageLayout from "../layouts/FrontPageLayout.astro";
import SpriteSheetGuidelinesContent from "../components/SpriteSheetGuidelinesContent.svelte";
---

<FrontPageLayout title="Sprite Sheet Guidelines">
  <div class="guidelines-container">
    <SpriteSheetGuidelinesContent client:only="svelte" />
  </div>
</FrontPageLayout>

<style>
  .guidelines-container {
    max-width: 900px;
    margin: 0 auto;
    padding: 2rem 1rem;
  }

  @media (max-width: 768px) {
    .guidelines-container {
      padding: 0;
    }
  }
</style>
