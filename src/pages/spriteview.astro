---
import fetchApi from '../lib/strapi';
import type Sheet from '../interfaces/sheet';

const sheets = await fetchApi<Sheet[]>({
  endpoint: 'sprites', // the content type to fetch
  wrappedByKey: 'data', // the key to unwrap the response
});

import SpriteViewerLayout from "../layouts/SpriteViewerLayout.astro";
---

<SpriteViewerLayout title="">
    <br>
    <br>
    <br>
    <ul>
        {
          sheets.map((sheet) => (
            <a href={`/blog/${sheet.attributes.createdAt}/`}>
              {sheet.attributes.slug}
            </a>
          ))
        }
      </ul>
</SpriteViewerLayout>